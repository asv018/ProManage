<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center_horizontal"
    tools:context=".activities.EditProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="@dimen/til_login_page_height"
        android:background="@drawable/bg_til"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/user_24"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:inputType="text"
                android:textColorHint="@color/text_grey"
                android:layout_marginTop="-6dp"
                android:hint="Enter Your Name"/>
        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/margin_login_page"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="@dimen/til_login_page_height"
        android:background="@drawable/bg_til"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/email_24"/>
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/text_grey"
                android:layout_marginTop="-6dp"
                android:hint="Enter Your Email"/>
        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/margin_login_page"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="@dimen/til_login_page_height"
        android:background="@drawable/bg_til"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/mobile_call_24"/>
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:inputType="number"
                android:textColorHint="@color/text_grey"
                android:layout_marginTop="-6dp"
                android:hint="XXXXX-XXXXX"/>
        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_save_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:text="Save Profile"
        android:textSize="13sp"/>




</LinearLayout>